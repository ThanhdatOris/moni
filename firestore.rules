rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Transactions subcollection
      match /transactions/{transactionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        allow create: if request.auth != null 
          && request.auth.uid == userId
          && validateTransactionData(request.resource.data);
          
        allow update: if request.auth != null 
          && request.auth.uid == userId
          && validateTransactionData(request.resource.data);
      }
      
      // Categories subcollection
      match /categories/{categoryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        allow create: if request.auth != null 
          && request.auth.uid == userId
          && validateCategoryData(request.resource.data);
          
        allow update: if request.auth != null 
          && request.auth.uid == userId
          && validateCategoryData(request.resource.data);
      }
      
      // Budget alerts subcollection
      match /budget_alerts/{alertId} {
        allow read, write: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
      
      // Reports subcollection
      match /reports/{reportId} {
        allow read, write: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
        
        // Limit queries to prevent abuse
        allow list: if isOwner(userId) && 
                       request.query.limit <= 100;
      }
      
      // Conversations subcollection
      match /conversations/{conversationId} {
        allow read, write: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
        
        // Limit queries to prevent abuse
        allow list: if isOwner(userId) && 
                       request.query.limit <= 20;
      }
      
      // Chat logs subcollection
      match /chat_logs/{interactionId} {
        allow read, write: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
        
        // Limit queries to prevent abuse
        allow list: if isOwner(userId) && 
                       request.query.limit <= 50;
      }
      
      // Spending limits subcollection
      match /limits/{limitId} {
        allow read, write: if isOwner(userId);
        allow create: if isOwner(userId) && 
                         validateSpendingLimit(request.resource.data);
        allow update: if isOwner(userId) && 
                         validateSpendingLimit(request.resource.data);
        allow delete: if isOwner(userId);
      }
      
      // Category usage tracking subcollection
      match /category_usage/{usageId} {
        allow read, write: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
      
      // Budgets subcollection
      match /budgets/{budgetId} {
        allow read, write: if isOwner(userId);
        allow create: if isOwner(userId) && 
                         validateBudgetData(request.resource.data);
        allow update: if isOwner(userId) && 
                         validateBudgetData(request.resource.data);
        allow delete: if isOwner(userId);
      }
    }
    
    // Hàm validation cho transaction data
    function validateTransactionData(data) {
      return data.keys().hasAll(['amount', 'type', 'date', 'is_deleted']) &&
             data.amount is number &&
             data.amount > 0 &&
             data.type in ['INCOME', 'EXPENSE'] &&
             data.date is timestamp &&
             data.is_deleted is bool;
    }
    
    // Hàm validation cho category data
    function validateCategoryData(data) {
      return data.keys().hasAll(['name', 'type', 'is_deleted']) &&
             data.name is string &&
             data.name.size() > 0 &&
             data.type in ['INCOME', 'EXPENSE'] &&
             data.is_deleted is bool;
    }
    
    // Hàm validation cho spending limit data
    function validateSpendingLimit(data) {
      return data.keys().hasAll(['categoryId', 'amount', 'type', 'isActive']) &&
             data.categoryId is string &&
             data.amount is number &&
             data.amount > 0 &&
             data.type is string &&
             data.isActive is bool;
    }
    
    // Hàm validation cho budget data
    function validateBudgetData(data) {
      return data.keys().hasAll(['categoryId', 'monthlyLimit']) &&
             data.categoryId is string &&
             data.monthlyLimit is number &&
             data.monthlyLimit > 0;
    }
    
    // Default deny for all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 